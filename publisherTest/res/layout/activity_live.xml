<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    tools:context="com.eil.eil_live.LiveActivity" >

     <android.opengl.GLSurfaceView
        android:id="@+id/surfaceView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_gravity="top|left|right|bottom" />


    <LinearLayout
        android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:weightSum="1"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" > 

        <Button
	        android:id="@+id/btn_start"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="start" />

         <Button
	        android:id="@+id/btn_stop"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="stop" />
         
        <Button
            android:id="@+id/btn_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="switch" />

        <Button
            android:id="@+id/btn_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="record" />

        <CheckBox
            android:id="@+id/check_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="light" />

    </LinearLayout>

     <LinearLayout
        android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:weightSum="1"
            android:layout_weight="1" >

         <Button
             android:id="@+id/btn_openPlay"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="openPlay" />

         <Button
	        android:id="@+id/btn_play"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="play" />
         
        <Button
            android:id="@+id/btn_resize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="resize" />

    </LinearLayout>
    
     
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="47dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="1" >

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="watermark" />

        <SeekBar
            android:id="@+id/seekBar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="10" />
        
        <CheckBox
            android:id="@+id/check_mirror"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mirror" />

    </LinearLayout>

     <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="90dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="1" >

        <CheckBox
            android:id="@+id/checkMute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mute" />

    </LinearLayout>
    
     <TextView
         android:id="@+id/tv"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_alignParentTop="true"
         android:text="recording"
         android:textColor="#ff0000" />

      <TextView
          android:id="@+id/tv_net"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_below="@+id/tv" />

</RelativeLayout>